<struts>
	<package name="chain" namespace="/" extends="struts-default">
		<action name="aAction_*" method="{1}" class="com.hbsy.oa.action.Chain1Action">
			<result type="chain">
				<param name="actionName">chain2Action</param>
				<param name="method">bb</param>
			</result>
		</action>
		
		<action name="chain2Action_*" method="{1}" class="com.hbsy.oa.action.Chain2Action">
			<result type="chain">
				<param name="actionName">chain3Action</param>
				<param name="method">cc</param>
			</result>
		</action>
		
		<action name="chain3Action_*" method="{1}" class="com.hbsy.oa.action.Chain3Action">
			<result>chain.jsp</result>
		</action>
	</package>
</struts>	